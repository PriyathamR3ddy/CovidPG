@model IEnumerable<PGReservation.Models.PGBeds>
@using GridMvc.Html
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.BedNo).Titled("Bed No").Filterable(true);
    columns.Add(c => c.BedStatus).Titled("Status").Filterable(true);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.BedID }));

    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.BedID }));
}).WithPaging(10).Sortable(true)
